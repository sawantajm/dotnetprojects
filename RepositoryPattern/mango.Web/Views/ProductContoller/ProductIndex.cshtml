@model IEnumerable<mango.Web.Models.ProductDto>


@* <div class="container p-4 border"> *@
    <div class="card shadow border-0 mt-4">
        <div class="card-header  justify-content-between align-items-center bg-secondary text-white">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-center"> Product List</h1>
                </div>
            </div>
        </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.CategoryName</td>
                    <td>$ @product.Price.ToString("0.00")</td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@product.ProductId">
                            <i class="fas fa-edit">Edit</i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@product.ProductId">
                            <i class="fas fa-trash">Delete</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
@* </div> *@